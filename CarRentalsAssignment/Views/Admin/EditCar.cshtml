@model CarRentalsAssignment.Models.Car

@{
    ViewData["Title"] = "EditCar";
}

<h1>EditCar</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Car Image Selection 1 -->
            <div class="form-group">
                <label asp-for="ImageFilenames[0]" for="CarImage1">Car Image 1</label>
                <select asp-for="ImageFilenames[0]" class="form-control" id="CarImage1" name="ImageFilenames[0]" asp-items="ViewBag.CarImages" onchange="updateImagePreviewSpecific(1)">
                </select>
                <span asp-validation-for="ImageFilenames[0]" class="text-danger"></span>
                <img id="imagePreview1" src="/images/cars/@Model.ImageFilenames.ElementAtOrDefault(0)" alt="Selected Image 1" style="max-width: 100px; margin-left: 10px; " />
            </div>

            <!-- Car Image Selection 2 -->
            <div class="form-group">
                <label asp-for="ImageFilenames[1]" for="CarImage2">Car Image 2</label>
                <select asp-for="ImageFilenames[1]" class="form-control" id="CarImage2" name="ImageFilenames[1]" asp-items="ViewBag.CarImages" onchange="updateImagePreviewSpecific(2)">
                </select>
                <span asp-validation-for="ImageFilenames[1]" class="text-danger"></span>
                <img id="imagePreview2" src="/images/cars/@Model.ImageFilenames.ElementAtOrDefault(1)" alt="Selected Image 2" style="max-width: 100px; margin-left: 10px; " />
            </div>

            <!-- Car Image Selection 3 -->
            <div class="form-group">
                <label asp-for="ImageFilenames[2]" for="CarImage3">Car Image 3</label>
                <select asp-for="ImageFilenames[2]" class="form-control" id="CarImage3" name="ImageFilenames[2]" asp-items="ViewBag.CarImages" onchange="updateImagePreviewSpecific(3)">
                </select>
                <span asp-validation-for="ImageFilenames[2]" class="text-danger"></span>
                <img id="imagePreview3" src="/images/cars/@Model.ImageFilenames.ElementAtOrDefault(2)" alt="Selected Image 3" style="max-width: 100px; margin-left: 10px; " />
            </div>

            @* <!-- Car Image Selection 3 --> *@
            @* <div class="form-group"> *@
            @*     <label asp-for="ImageFilenames[2]" for="CarImage3">Car Image 3</label> *@
            @*     <select asp-for="ImageFilenames[2]" class="form-control" id="CarImage3" name="ImageFilenames[2]" asp-items="ViewBag.CarImages" onchange="updateImagePreviewSpecific(3)"> *@
            @*     </select> *@
            @*     <span asp-validation-for="ImageFilenames[2]" class="text-danger"></span> *@
            @*     <img id="imagePreview3" src="" alt="Selected Image 3" style="max-width: 100px; margin-left: 10px; " /> *@
            @* </div> *@


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageCars">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>
        function updateImagePreviewSpecific(selectIndex) {
            // Get the selected value for the corresponding image select dropdown
            var selectElement = document.getElementById('CarImage' + selectIndex);
            var selectedValue = selectElement.value;

            // Get the image preview element
            var imagePreview = document.getElementById('imagePreview' + selectIndex);

            // If an image is selected, update the preview image's source and make it visible
            if (selectedValue) {
                imagePreview.src = "/images/cars/" + selectedValue;
                imagePreview.style.display = 'inline';  // Show the preview image
            } else {
                imagePreview.style.display = 'none';  // Hide the preview if no selection
            }
        }
    </script>
}
