@model CarRentalsAssignment.Models.Rental


@{
    ViewData["Title"] = "CreateRental";
}

<h1>CreateRental</h1>

<h4>Car</h4>
<hr />

<form asp-action="CreateRental" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    
    <div class="form-group">
        <label for="CarId">Select Car:</label>
        <select asp-for="CarId" class="form-control" required>
            <option value="">-- Select a Car --</option>  
            @foreach (var car in ViewBag.Cars as SelectList)
            {
                <option value="@car.Value">
                    @car.Text
                </option>
                
            }
        </select>
        <span asp-validation-for="CarId" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <input type="date" asp-for="StartDate" class="form-control" required value="@Model.StartDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label for="EndDate">End Date:</label>
        <input type="date" asp-for="EndDate" class="form-control" required value="@Model.EndDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <input type="submit" value="Create Rental" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="ListRentals">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
